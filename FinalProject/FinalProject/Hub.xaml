<Page x:Class="FinalProject.Hub"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
      mc:Ignorable="d" 
      d:DesignHeight="415" d:DesignWidth="790"
      Title="Hub">

    <Grid Background="#FFB46161">
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.239,0.295"/>
        <Button x:Name="Diary" Click="Diary_Clicked" Content="Diary" HorizontalAlignment="Left" Height="45" Margin="35,200,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.487,1.596" Background="#FFD57676"/>
        <Button x:Name="Timetable" Click="Timetable_Clicked" Content="Timetable" HorizontalAlignment="Left" Height="45" Margin="35,265,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.487,1.596" Background="#FFD57676"/>
        <Button x:Name="Map" Content="Map" HorizontalAlignment="Left" Height="45" Margin="35,330,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.487,1.596" Background="#FFD57676"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="370" Margin="245,22.5,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="520"/>
        <Grid HorizontalAlignment="Left" Height="75" Margin="253,125,0,0" VerticalAlignment="Top" Width="504">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Rectangle Grid.ColumnSpan="1" Fill="#FFFF2104" Height="75" Margin="0,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle Grid.ColumnSpan="2" Fill="#FFFF8000" Height="75" Margin="72,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle Grid.ColumnSpan="3" Fill="#FFE2FF00" Height="75" Margin="144,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle Grid.ColumnSpan="4" Fill="#FF3AFF00" Height="75" Margin="216,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle Grid.ColumnSpan="5" Fill="Cyan" Height="75" Margin="288,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle Grid.ColumnSpan="6" Fill="#FF002EFF" Height="75" Margin="360,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle Grid.ColumnSpan="7" Fill="#FF8500FF" Height="75" Margin="432,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock x:Name="sub1" Grid.ColumnSpan="1" HorizontalAlignment="Left" Margin="5,6,0,0" TextWrapping="Wrap" Text="Subject 1 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="77,6,0,0" TextWrapping="Wrap" Text="Subject 2 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub3" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="149,6,0,0" TextWrapping="Wrap" Text="Subject 3 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub4" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="221,6,0,0" TextWrapping="Wrap" Text="Subject 4 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub5" Grid.ColumnSpan="5" HorizontalAlignment="Left" Margin="293,6,0,0" TextWrapping="Wrap" Text="Subject 5 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub6" Grid.ColumnSpan="6" HorizontalAlignment="Left" Margin="365,6,0,0" TextWrapping="Wrap" Text="Subject 6 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub7" Grid.ColumnSpan="7" HorizontalAlignment="Left" Margin="437,6,0,0" TextWrapping="Wrap" Text="Subject 7 " VerticalAlignment="Top" Width="62"/>
        </Grid>
        <TextBlock x:Name="welcome" HorizontalAlignment="Left" Margin="258,60,0,0" TextWrapping="Wrap" Text="Good Evening, " VerticalAlignment="Top" FontSize="30" FontFamily="Arial"/>
        <TextBlock x:Name="TimetableDay" HorizontalAlignment="Left" Margin="258,102,0,0" TextWrapping="Wrap" Text="Timetable - Day _" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="#FF111111"/>
        <TextBlock HorizontalAlignment="Left" Margin="265,212,0,0" TextWrapping="Wrap" Text="Due Work" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="#FF111111" RenderTransformOrigin="0.47,5.432"/>
        <ListBox HorizontalAlignment="Left" Height="140" Margin="258,236,0,0" VerticalAlignment="Top" Width="224" RenderTransformOrigin="-1.145,0.824">
            <ListBoxItem Content="No Work"/>
            <ListBoxItem Content="Death"/>
        </ListBox>
        <Image HorizontalAlignment="Left" Height="100" Margin="60,50,0,0" VerticalAlignment="Top" Width="100" Source="Images/CCGSCrest.jpg"/>
        <Label x:Name="Time" HorizontalContentAlignment="Right" Content="Loading..." HorizontalAlignment="Left" Margin="665,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.737,0.692" Width="96"/>
        <local:Frame Name="HubFrame" NavigationUIVisibility="Hidden" Navigated="HubFrame_Navigated" >
        </local:Frame>
    </Grid>
</Page>

