<Page x:Class="FinalProject.Hub"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
      mc:Ignorable="d" 
      d:DesignHeight="415" d:DesignWidth="790"
      Title="Hub">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0.0" />
                    <GradientStop Color="White" Offset="0.25" />
                    <GradientStop Color="LightBlue" Offset="0.75" />
                    <GradientStop Color="LightBlue" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Fill="#FF00305E" HorizontalAlignment="Left" Height="415" Margin="-9,0,0,-13.8" Stroke="#FF00305E" VerticalAlignment="Top" Width="229" RenderTransformOrigin="0.239,0.295"/>


        <Button x:Name="Diary" Foreground="Navy" Click="Diary_Clicked" Content="Diary" HorizontalAlignment="Left" Height="36" Margin="35,182,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.487,1.596">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6FFFD" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Timetable" Foreground="Navy" Content="Timetable" HorizontalAlignment="Left" Height="36" Margin="35,236,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.487,1.596" Click="Timetable_Clicked">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6FFFD" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Sport_Button" Foreground="Navy" Content="Sport" HorizontalAlignment="Left" Margin="35,344,0,0" VerticalAlignment="Top" Width="150" Height="36" Click="Sport_Buton_clicked">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6FFFD" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Map" Foreground="Navy" Click="Map_Clicked" Content="Map" HorizontalAlignment="Left" Height="36" Margin="35,291,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.487,1.596" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6EBFF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <Rectangle Fill="AliceBlue" HorizontalAlignment="Left" Height="20" Margin="253,105,0,0" VerticalAlignment="Top" Width="504" Stroke="Black" StrokeThickness="0.5"/>
        <Grid HorizontalAlignment="Left" Height="20" Margin="253,105,0,0" VerticalAlignment="Top" Width="504">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="current" Fill="#7F6495ED" HorizontalAlignment="Left" Height="20" Margin="0,0,0,0" VerticalAlignment="Top" Width="72.7" Stroke="Black" Grid.ColumnSpan="10"/>
            <Label x:Name="P0" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="0" Grid.Row="0" Content="Tutorial" Margin="-2,-5,0,0" FontWeight="Bold"/>
            <Label x:Name="P1" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="1" Grid.Row="0" Content="Period 1" Margin="-2,-5,0,0" FontWeight="Bold"/>
            <Label x:Name="P2" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="2" Grid.Row="0" Content="Period 2" Margin="-2,-5,0,0" FontWeight="Bold"/>
            <Label x:Name="P3" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="3" Grid.Row="0" Content="Period 3" Margin="-2,-5,0,0" FontWeight="Bold"/>
            <Label x:Name="P4" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="4" Grid.Row="0" Content="Period 4" Margin="-2,-5,0,0" FontWeight="Bold"/>
            <Label x:Name="P5" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="5" Grid.Row="0" Content="Period 5" Margin="-2,-5,0,0" FontWeight="Bold"/>
            <Label x:Name="P6" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Column="6" Grid.Row="0" Content="Period 6" Margin="-2,-5,0,0" FontWeight="Bold"/>
        </Grid>

        <Grid HorizontalAlignment="Left" Height="75" Margin="253,125,0,0" VerticalAlignment="Top" Width="504">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Rectangle x:Name="Sub0" Grid.ColumnSpan="1" Fill="#FFFF1D00" Height="75" Margin="0,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle x:Name="Sub1" Grid.ColumnSpan="2" Fill="#FFFF8000" Height="75" Margin="72,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle x:Name="Sub2" Grid.ColumnSpan="3" Fill="#FFE2FF00" Height="75" Margin="144,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle x:Name="Sub3" Grid.ColumnSpan="4" Fill="#FF3AFF00" Height="75" Margin="216,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle x:Name="Sub4" Grid.ColumnSpan="5" Fill="Cyan" Height="75" Margin="288,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle x:Name="Sub5" Grid.ColumnSpan="6" Fill="#FF002EFF" Height="75" Margin="360,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle x:Name="Sub6" Grid.ColumnSpan="7" Fill="#FF8500FF" Height="75" Margin="432,0,0,0" Stroke="#00000000" Width="72" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock x:Name="sub1" Grid.ColumnSpan="1" HorizontalAlignment="Left" Margin="5,6,0,0" TextWrapping="Wrap" Text="Subject 1 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="77,6,0,0" TextWrapping="Wrap" Text="Subject 2 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub3" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="149,6,0,0" TextWrapping="Wrap" Text="Subject 3 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub4" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="221,6,0,0" TextWrapping="Wrap" Text="Subject 4 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub5" Grid.ColumnSpan="5" HorizontalAlignment="Left" Margin="293,6,0,0" TextWrapping="Wrap" Text="Subject 5 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub6" Grid.ColumnSpan="6" HorizontalAlignment="Left" Margin="365,6,0,0" TextWrapping="Wrap" Text="Subject 6 " VerticalAlignment="Top" Width="62"/>
            <TextBlock x:Name="sub7" Grid.ColumnSpan="7" HorizontalAlignment="Left" Margin="437,6,0,0" TextWrapping="Wrap" Text="Subject 7 " VerticalAlignment="Top" Width="62"/>
        </Grid>
        <TextBlock x:Name="welcome" Foreground="#FF747474" HorizontalAlignment="Left" Margin="258,45,0,0" TextWrapping="Wrap" Text="Good Evening, " VerticalAlignment="Top" FontSize="30" FontFamily="Arial"/>
        <TextBlock x:Name="TimetableDay" Foreground="#FF747474" HorizontalAlignment="Left" Margin="258,85,0,0" TextWrapping="Wrap" Text="Timetable - Day _" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Foreground="#FF747474" Margin="265,212,0,0" TextWrapping="Wrap" Text="Due Work" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.47,5.432"/>
        <TextBlock Foreground="#FF747474" Margin="525,212,212,0" TextWrapping="Wrap" Text="Links" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.47,5.432"/>
        <ListBox HorizontalAlignment="Left" Height="140" Margin="258,236,0,0" VerticalAlignment="Top" Width="224" RenderTransformOrigin="-1.145,0.824">
            <ListBoxItem Content="Find Mr Nolans Address"/>
            <ListBoxItem Content="Finish School"/>
        </ListBox>
        <Button x:Name="Nexus" Foreground="Navy" Click="Nexus_clicked"  HorizontalAlignment="Left" Height="90" Margin="509,236,0,0" VerticalAlignment="Top" Width="109" RenderTransformOrigin="-0.487,1.596" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Images/nexus_logo.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="119" Margin="10,22,0,0" VerticalAlignment="Top" Width="195" Source="Images/CCGS_logo2.png"/>
        <Label x:Name="Time" Foreground="#FF747474" HorizontalContentAlignment="Right" Content="Loading..." HorizontalAlignment="Left" Margin="665,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.737,0.692" Width="96"/>
        <local:Frame Name="HubFrame" NavigationUIVisibility="Hidden" Navigated="HubFrame_Navigated" >
        </local:Frame>


    </Grid>
</Page>

