<Page x:Class="FinalProject.Sports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sports">

    <Grid Background="#FF00305E">
        <Label Foreground ="White" BorderThickness ="15"  Content="Sport Fixtures" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" BorderBrush="Gold"/>
        <Rectangle Fill="Gold" HorizontalAlignment="Left" Height="112" Margin="578,0,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="167"/>

        <Rectangle Fill="Gold" HorizontalAlignment="Left" Height="450" Margin="711,0,-2,0" Stroke="#00000000" VerticalAlignment="Top" Width="91"/>
        <Image HorizontalAlignment="Left" Height="96" Margin="596,0,-2,0" VerticalAlignment="Top" Width="206" Source="CCGS_logo.png"/>
        <Rectangle Fill="#FF00305E" HorizontalAlignment="Left" Height="342" Margin="734,85,-2,0" Stroke="#00000000" VerticalAlignment="Top" Width="68"/>
        <Button x:Name="_return" Content="Back To Hub" Background="Gold" Foreground="#FF00305E" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="94" Height="31" BorderBrush="#00707070" FontSize="14" FontWeight="Bold" Click="Return_Clicked"/>
        <Rectangle Fill="#0000305E" HorizontalAlignment="Left" Height="286" Margin="-89,-126,0,0" Stroke="Gold" StrokeThickness="15" VerticalAlignment="Top" Width="415"/>
        <Frame x:Name="SportPage"/>
    </Grid>
</Page>
